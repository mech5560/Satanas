#!/bin/bash

gnuplot << EOF
unset key
set term eps enhanced color solid lw 2 size 10in,7in font  'Helvetica,14'
set output '$1_contour.eps'
set title "$1-contour"
set contour base
set cntrparam levels 100
set xlabel "X"
set ylabel "Y"


unset surface
set view map
#set palette gray
splot "$1.dat"  with pm3d palette gray
EOF
epstopdf $1_contour.eps
rm $1_contour.eps
okular $1_contour.pdf &
